<!doctype html>
<html lang="fr">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/5c9c988ef6.js" crossorigin="anonymous"></script>

    <title>{% block title %}{% endblock %} - Test HumanSix</title>

    {% block stylesheets %}
    {% endblock %}


  </head>
  <body class="pb-5">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Test HumanSix</a>


        {% if app.request.cookies.has('is_logged') and (app.request.cookies.get('is_logged') == "yes")%}
          <button class="btn btn-light py-3 px-4" data-bs-toggle="modal" data-bs-target="#orderModal"><i class="fas fa-plus me-3"></i>Ajouter commande</button>

          <a href="{{path('logout')}}" class="btn btn-outline-light">DÃ©connexion</a>
        {% endif %}
      </div>
    </nav>

    <div class="container">
      {% for message in app.flashes('success') %}
        <div class="row">
          <div class="col">
            <div class="lead">
              <div class="alert alert-success  py-3 mt-2">
                  <i class="fas fa-check mx-2"></i>{{ message }}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
      {% for message in app.flashes('warning') %}
        <div class="row">
          <div class="col">
            <div class="lead">
              <div class="alert alert-warning  py-3 mt-2">
                  <i class="fas fa-exclamation-triangle mx-2"></i>{{ message }}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% block body %}{% endblock %}

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    
    {% block javascripts %}
    {% endblock %}
  </body>
</html>
